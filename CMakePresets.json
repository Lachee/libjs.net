{
    "version": 6,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 25,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "default",
            "displayName": "CLang Ninja",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/release",
            "inherits": [
                "windows"
            ],
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "RelWithDebInfo",
                "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
                "CMAKE_C_COMPILER": "clang-cl",
                "CMAKE_CXX_COMPILER": "clang-cl"
            },
            "environment": {
                "LADYBIRD_SOURCE_DIR": "${fileDir}/ladybird",
                "VCPKG_ROOT": "${fileDir}/build/vcpkg",
                "VCPKG_BINARY_SOURCES": "clear;files,${fileDir}/build/caches/vcpkg-binary-cache,readwrite;$penv{VCPKG_BINARY_SOURCES}"
            }
        },
        {
            "hidden": true,
            "name": "windows",
            "description": "Visual Studio IDE config (experimental)",
            "architecture": {
                "value": "x64",
                "strategy": "external"
            },
            "cacheVariables": {
                "ENABLE_QT": "OFF"
            },
            "vendor": {
                "microsoft.com/VisualStudioSettings/CMake/1.0": {
                    "intelliSenseMode": "windows-clang-x64"
                }
            },
            "condition": {
                "lhs": "${hostSystemName}",
                "type": "equals",
                "rhs": "Windows"
            }
        }
    ]
}